<link rel="stylesheet" type="text/css" href="/css/customer_sign_up.css">
<div class="outerBox">
    <h1 style="color: #343A40;">Sign Up</h1>

    <form action="/customers/create" method="post">
        <div class="signupBox">
            <input style="margin-top: 10px; margin-bottom: 10px; width: 200px" type="text" name="name" placeholder="Your name" required>
            <input class="inputBox" type="email" name="email" placeholder="Your email" required>
            <input class="inputBox" type="password" name="password" placeholder="Password" required>
            <input class="inputBox" type="password" name="confirm_password" placeholder="Confirm password" required>
            <input class="Sign_up" type="submit" value="Sign Up">
            <p style="font-size: 13px; margin-bottom: -2px; color: antiquewhite;">If you already have an account</p>            
        </div>

    </form>
    <a href="/customers/sign-in" style="margin-top: -50px;">
        <button class="Sign_in">Sign In</button>
    </a>
</div>