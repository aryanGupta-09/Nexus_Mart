<link rel="stylesheet" type="text/css" href="/css/customer_sign_up.css">
<h1>Sign Up</h1>

<form action="/users/create" method="post">
    <div class="signupBox">
        <input class="inputBox" type="text" name="name" placeholder="Your name" required>
        <input class="inputBox" type="email" name="email" placeholder="Your email" required>
        <input class="inputBox" type="password" name="password" placeholder="Password" required>
        <input class="inputBox" type="password" name="confirm_password" placeholder="Confirm password" required>
        <input class="inputBox" type="submit" value="Sign Up">
    </div>
    
</form>