<table class="table table-hover" style="margin: 20px;">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product</th>
            <th scope="col">Description</th>
            <th scope="col">Stock</th>
            <th scope="col">total_price</th>
        </tr>
    </thead>
    <tbody>
        <% var i=1 %>
            <% for(pro of products){ %>

                <tr>
                    <th scope="row">
                        <%=i %>
                    </th>
                    <td>
                        <img src="<%=pro.image%>" alt="" class="imgsize">
                        <%=pro.name%>

                    </td>
                    <td>
                        <%=pro.description%>
                    </td>
                    <td>
                        <%=pro.stock%>
                    </td>
                    <td>
                        <%=pro.total_price%>
                    </td>
                </tr>
                <%i+=1%>
                    <% } %>
    </tbody>
</table>