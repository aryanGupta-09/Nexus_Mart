<div style="padding:20px;">

    <table class="table table-hover table-bordered text-center" style="">
        <thead class="thead-dark ">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Product</th>
                <th scope="col">Description</th>
                <th scope="col">Stock</th>
                <th scope="col">total_price</th>
                <th scope="col">Add</th>
            </tr>
        </thead>
        <tbody>
            <% var i=1 %>
                <% for(pro of products){ %>

                    <tr>
                        <th scope="row">
                            <%=i %>
                        </th>
                        <td>
                            <img src="<%=pro.image%>" alt="" class="imgsize" style="width: 100px;">
                            <%=pro.name%>

                        </td>
                        <td>
                            <%=pro.description%>
                        </td>
                        <td>
                            <%=pro.stock%>
                        </td>
                        <td>
                            <%=pro.total_price%>
                        </td>
                        <td>

                            <div class="btn-group" >

                                <button class="text-center" onClick="removefromcart('<%=i%>')" style=" padding: 0px 7px 0px 7px; color:antiquewhite; background-color: #343A40; border-right: 0px;">-</button>
                                <button id="<%=i%>"   style=" padding: 0px 15px 0px 15px; border:none">0</button>
                                <button class="text-center" onClick="addtocart('<%=i%>')" style=" padding: 0px 7px 0px 7px; color:antiquewhite; background-color: #343A40;  border-left: 0px;">+</button>
                            </div>
                        </td>
                    </tr>
                    <%i+=1%>
                        <% } %>
        </tbody>
    </table>
</div>

<script>

var clicks = 0;

function removefromcart(id) {

    if(Number(document.getElementById(id).innerHTML)<1){
        return 0;
    }

  document.getElementById(id).innerHTML -= 1;
};
function addtocart(id) {
  clicks += 1;
  document.getElementById(id).innerHTML = Number(document.getElementById(id).innerHTML) + 1;
};
</script>
